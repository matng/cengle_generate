<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxd.dao.RentMapper" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.hxd.bean.Rent" >
	<result column="id" jdbcType="INTEGER" property="id"/>
	<result column="startDate" jdbcType="TIMESTAMP" property="startDate"/>
	<result column="expectDate" jdbcType="TIMESTAMP" property="expectDate"/>
	<result column="actualDate" jdbcType="TIMESTAMP" property="actualDate"/>
	<result column="Overdue" jdbcType="DECIMAL" property="overdue"/>
	<result column="expectRental" jdbcType="DECIMAL" property="expectRental"/>
	<result column="actualRental" jdbcType="DECIMAL" property="actualRental"/>
	<result column="rentDept" jdbcType="VARCHAR" property="rentDept"/>
	<result column="rentPersoRn" jdbcType="VARCHAR" property="rentPersoRn"/>
	<result column="project" jdbcType="VARCHAR" property="project"/>
	<result column="sId" jdbcType="INTEGER" property="sId"/>
</resultMap>
       
<!-- rent table all fields -->
<sql id="Base_Column_List" >
	 id,startDate,expectDate,actualDate,Overdue,expectRental,actualRental,rentDept,rentPersoRn,project,sId
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null and id != ''" >
	    and id =  #{id}
	</if>
	<if test="startDate != null and startDate != ''" >
	    and startDate =  #{startDate}
	</if>
	<if test="expectDate != null and expectDate != ''" >
	    and expectDate =  #{expectDate}
	</if>
	<if test="actualDate != null and actualDate != ''" >
	    and actualDate =  #{actualDate}
	</if>
	<if test="overdue != null and overdue != ''" >
	    and Overdue =  #{overdue}
	</if>
	<if test="expectRental != null and expectRental != ''" >
	    and expectRental =  #{expectRental}
	</if>
	<if test="actualRental != null and actualRental != ''" >
	    and actualRental =  #{actualRental}
	</if>
	<if test="rentDept != null and rentDept != ''" >
	    and rentDept =  #{rentDept}
	</if>
	<if test="rentPersoRn != null and rentPersoRn != ''" >
	    and rentPersoRn =  #{rentPersoRn}
	</if>
	<if test="project != null and project != ''" >
	    and project =  #{project}
	</if>
	<if test="sId != null and sId != ''" >
	    and sId =  #{sId}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="insert" parameterType="Object" >
<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey>
  insert into rent(id,startDate,expectDate,actualDate,Overdue,expectRental,actualRental,rentDept,rentPersoRn,project,sId)
 values(#{id,jdbcType=INTEGER},#{startDate,jdbcType=TIMESTAMP},#{expectDate,jdbcType=TIMESTAMP},#{actualDate,jdbcType=TIMESTAMP},#{overdue,jdbcType=DECIMAL},#{expectRental,jdbcType=DECIMAL},#{actualRental,jdbcType=DECIMAL},#{rentDept,jdbcType=VARCHAR},#{rentPersoRn,jdbcType=VARCHAR},#{project,jdbcType=VARCHAR},#{sId,jdbcType=INTEGER})
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="Object" >
  update rent set startDate=#{startDate},expectDate=#{expectDate},actualDate=#{actualDate},Overdue=#{overdue},expectRental=#{expectRental},actualRental=#{actualRental},rentDept=#{rentDept},rentPersoRn=#{rentPersoRn},project=#{project},sId=#{sId} where id=#{id}
 </update>
 
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateBySelective" parameterType="Object" >
	update rent set 
	<trim  suffixOverrides="," >
	<if test="startDate != null  ">
		startDate=#{startDate},
	</if>
	<if test="expectDate != null  ">
		expectDate=#{expectDate},
	</if>
	<if test="actualDate != null  ">
		actualDate=#{actualDate},
	</if>
	<if test="overdue != null  ">
		Overdue=#{overdue},
	</if>
	<if test="expectRental != null  ">
		expectRental=#{expectRental},
	</if>
	<if test="actualRental != null  ">
		actualRental=#{actualRental},
	</if>
	<if test="rentDept != null  ">
		rentDept=#{rentDept},
	</if>
	<if test="rentPersoRn != null  ">
		rentPersoRn=#{rentPersoRn},
	</if>
	<if test="project != null  ">
		project=#{project},
	</if>
	<if test="sId != null  ">
		sId=#{sId},
	</if>
	</trim> where id=#{id}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete 	 from rent where id = #{id}
</delete>

<delete id="deleteRentByBatch" parameterType="java.util.List">
  		delete from rent
  		<where>
 		 	<foreach collection="list" index="index" item="item" open="(" separator="or" close=")">     
  				id=#item
    		</foreach>
  		</where>
  </delete>
 
<!-- 根据id查询 租借信息表 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from rent where id = #{id}
</select>

<!-- 租借信息表 列表总数-->
<select id="queryRentListCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from rent 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询租借信息表列表 -->
<select id="queryRentListByPage" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from rent 
	<include refid="Example_Where_Clause"/>
	<choose>
		<when test="orderField !=null and orderField !=''">
			 ORDER BY ${orderField} <if test="orderDirection != null and orderDirection != ''">${orderDirection}</if>
		</when>
		<otherwise>
			 order by id DESC
		</otherwise>
	</choose>
</select>
  	
</mapper>   
