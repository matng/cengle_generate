<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${bussPackage}.dao#if($!entityPackage).${entityPackage}#end.${className}Mapper" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="${bussPackage}.bean#if($!entityPackage).${entityPackage}#end.$!{className}" >
#foreach($item in $!{columnDatas})
	<result column="$!item.columnName" jdbcType="$!item.columnType" property="$!item.formatColumnName"/>
#end
</resultMap>
       
<!-- $!{tableName} table all fields -->
<sql id="Base_Column_List" >
	 $!{SQL.columnFields}
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
#foreach($item in $!{columnDatas})
	#set($testStr = $!item.formatColumnName + " != null and " + $!item.formatColumnName + " != ''")
	#if($!item.dataType == 'String')
		#set($testStr = $!testStr + " and " + $!item.formatColumnName + " != ''")
 	#end
<if test="$!testStr" >
	    and $!item.columnName =  #{$!item.formatColumnName}
	</if>
#end
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="insert" parameterType="Object" >
#if  ($keyType =='02')
<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey>
#end
  $!{SQL.insert}
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="Object" >
  $!{SQL.update}
 </update>
 
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateBySelective" parameterType="Object" >
	$!{SQL.updateSelective}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	$!{SQL.delete}
</delete>

<delete id="delete${className}ByBatch" parameterType="java.util.List">
  		delete from ${tableName}
  		<where>
 		 	<foreach collection="list" index="index" item="item" open="(" separator="or" close=")">     
  				id=#{item}
    		</foreach>
  		</where>
  </delete>
 
<!-- 根据id查询 ${codeName} -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	$!{SQL.selectById}
</select>

<!-- ${codeName} 列表总数-->
<select id="query${className}ListCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from ${tableName} 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询${codeName}列表 -->
<select id="query${className}ListByPage" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from ${tableName} 
	<include refid="Example_Where_Clause"/>
	<choose>
		<when test="orderField !=null and orderField !=''">
			 ORDER BY ${orderField} <if test="orderDirection != null and orderDirection != ''">${orderDirection}</if>
		</when>
		<otherwise>
			 order by id DESC
		</otherwise>
	</choose>
</select>
  	
</mapper>   
